@page "/EventosConCupo"
@inject ListarEventosConCupoDisponibleUseCase ListarEventosConCupoDisponible
@inject ListarReservasUseCase ListarReservasUseCase
@inject ServicioSesion UsuarioActual

<h3>Eventos con Cupo Disponible</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Fecha y Hora</th>
                <th>Duración (hs)</th>
                <th>Cupo Máximo</th>
                <th>Disponibles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in eventosConCupo)
            {
                <tr>
                    <td>@e.Nombre</td>
                    <td>@e.Descripcion</td>
                    <td>@e.FechaHoraInicio.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@e.DuracionHoras</td>
                    <td>@e.CupoMaximo</td>
                    <td>@(e.CupoMaximo - reservasPorEvento.GetValueOrDefault(e.Id, 0))</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<EventoDeportivo> eventosConCupo = new();
    private Dictionary<int, int> reservasPorEvento = new();
    private string? errorMessage;
    protected override void OnInitialized()
    {
        try{
            eventosConCupo = ListarEventosConCupoDisponible.Ejecutar();

            foreach (var evento in eventosConCupo)
            {
                var reservas = ListarReservasUseCase.Ejecutar().Count(r => r.EventoDeportivoId == evento.Id);
                reservasPorEvento[evento.Id] = reservas;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error al cargar los eventos con cupo: {ex.Message}";
            // Aquí podrías manejar el error de manera más adecuada, como mostrar un mensaje al usuario.
        }
        if(reservasPorEvento.Count == 0)
        {
            errorMessage = "No hay eventos con cupo disponible.";
        }
    }
}